<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/ic_heat_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome"
        android:textColor="#707070"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Version 1.0"
        android:textSize="13sp"
        android:textColor="#707070"
        app:layout_constraintBottom_toBottomOf="@id/tv_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_welcome" />

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Sign in to Continue"
        android:textSize="16sp"
        android:textColor="#707070"
        app:layout_constraintStart_toStartOf="@id/tv_welcome"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="39dp"
        android:textColor="#707070"
        android:background="@drawable/login_field_bg"
        android:drawableEnd="@drawable/ic_baseline_person_outline_24"
        android:hint="Registered mobile No"
        android:text=""
        android:inputType="phone"
        android:paddingStart="20dp"
        android:textColorHint="#80707070"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_in" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_field_bg"
        android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#80707070"
        android:textColor="#707070"
        android:paddingStart="20dp"
        android:maxLines="1"
        android:maxLength="20"
        android:visibility="gone"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/et_mobile"
        app:layout_constraintStart_toStartOf="@id/et_mobile"
        app:layout_constraintTop_toBottomOf="@id/et_mobile" />

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_field_bg"
        android:drawableEnd="@drawable/ic_baseline_password_24"
        android:hint="Enter OTP"
        android:maxLength="6"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/et_mobile"
        app:layout_constraintStart_toStartOf="@id/et_mobile"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_btn_bg"
        android:text="Login"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_otp" />

    <ImageView
        android:id="@+id/iv_tg_logo"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/agp_horizontal_logo"
        android:layout_width="200dp"
        android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>