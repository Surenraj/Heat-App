<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_comments"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#4A99B8"
    app:strokeWidth="1dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:hint="Comments"
            android:background="@drawable/description_background"
            android:id="@+id/et_comment"
            android:gravity="start"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:id="@+id/signature"
            app:layout_constraintTop_toBottomOf="@id/et_comment"
            app:layout_constraintStart_toStartOf="@id/et_comment"
            app:layout_constraintEnd_toStartOf="@id/btn_signature"
            android:background="@drawable/signature_background"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_signature"
            android:layout_marginStart="5dp"
            android:background="@drawable/edit_icon_bg"
            app:backgroundTint="@null"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:textColor="#545454"
            app:layout_constraintBottom_toTopOf="@id/btn_clear"
            android:fontFamily="@font/barlow_semibold"
            app:layout_constraintTop_toTopOf="@id/signature"
            app:layout_constraintStart_toEndOf="@id/signature"
            app:layout_constraintEnd_toEndOf="@id/et_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_marginStart="5dp"
            android:background="@drawable/edit_icon_bg"
            app:backgroundTint="@null"
            android:text="Clear"
            android:textColor="#545454"
            android:textAllCaps="false"
            android:textSize="11dp"
            android:fontFamily="@font/barlow_semibold"
            app:layout_constraintTop_toBottomOf="@id/btn_signature"
            app:layout_constraintBottom_toBottomOf="@id/signature"
            app:layout_constraintStart_toEndOf="@id/signature"
            app:layout_constraintEnd_toEndOf="@id/btn_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="50dp"
            android:background="@drawable/submit_btn_background"
            android:fontFamily="@font/barlow_semibold"
            android:text="CLOSE"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_submit"
            app:layout_constraintTop_toBottomOf="@id/signature" />



        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="50dp"
            android:background="@drawable/submit_btn_background"
            android:fontFamily="@font/barlow_semibold"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@id/btn_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signature" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>